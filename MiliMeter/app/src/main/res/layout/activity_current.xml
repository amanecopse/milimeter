<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".activities.ResultActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="전 종목" />

            <Button
                android:id="@+id/legtuckbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="레그턱" />

            <Button
                android:id="@+id/run"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="240m" />

            <Button
                android:id="@+id/circuit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="전장 순환" />

        </LinearLayout>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChart"
            android:layout_width="match_parent"
            android:layout_height="221dp"></com.github.mikephil.charting.charts.LineChart>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray">

                <TextView
                    android:id="@+id/event_date"
                    android:layout_width="92dp"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/black"
                    android:text="종목/날짜" />

                <TextView
                    android:id="@+id/date1"
                    android:layout_width="103dp"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/date2"
                    android:layout_width="117dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/date3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/black"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:background="@android:color/background_light"
                >

                <TextView
                    android:id="@+id/legtuck"
                    android:layout_width="109dp"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/black"
                    android:text="레그턱" />

                <TextView
                    android:id="@+id/legrecord1"
                    android:layout_width="88dp"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/legrecord2"
                    android:layout_width="88dp"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/legrecord3"
                    android:layout_width="88dp"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/black"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:background="@android:color/background_light">

                <TextView
                    android:id="@+id/runrecord"
                    android:layout_width="109dp"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/black"
                    android:text="240m" />

                <TextView
                    android:id="@+id/runrecord1"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/runrecord2"
                    android:layout_width="103dp"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/runrecord3"
                    android:layout_width="117dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:background="@android:color/background_light">

                <TextView
                    android:id="@+id/circuitrecord"
                    android:layout_width="109dp"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/black"
                    android:text="전장순환" />

                <TextView
                    android:id="@+id/circuitrecord1"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/circutrecord2"
                    android:layout_width="103dp"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/circuitrecord3"
                    android:layout_width="103dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"/>
            </TableRow>

        </TableLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="95dp"
            android:layout_alignParentBottom="true"
            android:gravity="fill_horizontal"
            android:orientation="horizontal"
            android:layout_marginTop="290dp" >

            <Button
                android:id="@+id/homeBt"
                android:layout_width="81dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/ic_baseline_home_20_white"
                android:text="home"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:gravity="center_horizontal"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/bodyBt"
                android:layout_width="81dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/ic_baseline_accessibility_20_white"
                android:text="body"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:gravity="center_horizontal"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/resultBt"
                android:layout_width="81dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/ic_baseline_insert_chart_outlined_20_white"
                android:text="result"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:gravity="center_horizontal"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/goalBt"
                android:layout_width="81dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/ic_baseline_track_changes_20_white"
                android:text="goal"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:gravity="center_horizontal"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/settingBt"
                android:layout_width="81dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/ic_baseline_miscellaneous_services_20_white"
                android:text="setting"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:gravity="center_horizontal"
                android:textAllCaps="false" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
