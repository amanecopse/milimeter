<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".activities.Current_Activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="전 종목" />

            <Button
                android:id="@+id/legtuckbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="레그턱" />

            <Button
                android:id="@+id/run"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="240m" />

            <Button
                android:id="@+id/circuit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="전장 순환" />

        </LinearLayout>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChart"
            android:layout_width="match_parent"
            android:layout_height="221dp"></com.github.mikephil.charting.charts.LineChart>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cardview_shadow_start_color">

                <TextView
                    android:id="@+id/event_date"
                    android:layout_width="92dp"
                    android:layout_height="match_parent"
                    android:text="종목/날짜" />

                <TextView
                    android:id="@+id/date1"
                    android:layout_width="103dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/date2"
                    android:layout_width="117dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/date3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="71dp">

                <TextView
                    android:id="@+id/legtuck"
                    android:layout_width="109dp"
                    android:layout_height="match_parent"
                    android:background="@color/cardview_shadow_start_color"
                    android:text="레그턱" />

                <TextView
                    android:id="@+id/legrecord1"
                    android:layout_width="88dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/legrecord2"
                    android:layout_width="88dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/legrecord3"
                    android:layout_width="88dp"
                    android:layout_height="match_parent" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="71dp">

                <TextView
                    android:id="@+id/runrecord"
                    android:layout_width="109dp"
                    android:layout_height="match_parent"
                    android:background="@color/cardview_shadow_start_color"
                    android:text="240m" />

                <TextView
                    android:id="@+id/runrecord1"
                    android:layout_width="100dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/runrecord2"
                    android:layout_width="103dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/runrecord3"
                    android:layout_width="117dp"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="71dp">

                <TextView
                    android:id="@+id/circuitrecord"
                    android:layout_width="109dp"
                    android:layout_height="match_parent"
                    android:background="@color/cardview_shadow_start_color"
                    android:text="전장순환" />

                <TextView
                    android:id="@+id/circuitrecord1"
                    android:layout_width="100dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/circutrecord2"
                    android:layout_width="103dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/circuitrecord3"
                    android:layout_width="103dp"
                    android:layout_height="wrap_content" />
            </TableRow>

        </TableLayout>

    </LinearLayout>


</RelativeLayout>
