<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/appWindowBackground"
    tools:context=".activities.LegtuckResultActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/appBarCl"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="?attr/cardBackground"
        android:elevation="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iconIv"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/ic_baseline_insert_chart_outlined_20_white"
                app:tint="?attr/textColorBanner" />

            <TextView
                android:id="@+id/titleTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 레그턱"
                android:textColor="?attr/textColorBanner"
                android:textSize="@dimen/largeText" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/backIb"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_arrow_back_24_cyan"
            app:tint="?attr/textColorBanner" />

        <ImageButton
            android:id="@+id/cancelIb"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_cancel_24_cyan"
            app:tint="?attr/textColorBanner" />

        <ImageView
            android:id="@+id/borderLineIv"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="?attr/textColorBanner"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        </ImageView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/bodySv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarCl">

        <LinearLayout
            android:id="@+id/bodyLl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="11dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="11dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bottom_button_background_cyan"
                    android:text="전 종목"
                    android:textColor="?attr/buttonTextColor"
                    android:textSize="@dimen/smallText" />

                <Button
                    android:id="@+id/legtuckbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bottom_button_background_cyan"
                    android:text="레그턱"
                    android:textColor="?attr/buttonTextColor"
                    android:textSize="@dimen/smallText" />

                <Button
                    android:id="@+id/run"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bottom_button_background_cyan"
                    android:text="240m"
                    android:textColor="?attr/buttonTextColor"
                    android:textSize="@dimen/smallText" />

                <Button
                    android:id="@+id/circuit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bottom_button_background_cyan"
                    android:text="전장순환"
                    android:textColor="?attr/buttonTextColor"
                    android:textSize="@dimen/smallText" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="#ffffff">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/legChart"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"></com.github.mikephil.charting.charts.LineChart>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#ffffff">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:orientation="vertical">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="10dp">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/event_date"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="?attr/appWindowBackground"
                                android:text="특급"
                                android:textAlignment="center"
                                android:textColor="?attr/textColorBanner" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="?attr/appWindowBackground"
                                android:gravity="center_horizontal"
                                android:text="20회 이상"
                                android:textAlignment="center"
                                android:textColor="?attr/textColorBanner" />

                            <TextView
                                android:id="@+id/expert"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.2"
                                android:background="#FFFFFF"
                                android:textStyle="bold"
                                android:textColor="#FF0000"
                                android:text="" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="?attr/cardBackground"
                                android:gravity="center_horizontal"
                                android:text="1급"
                                android:textAlignment="center"
                                android:textColor="?attr/textColor" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="?attr/cardBackground"
                                android:gravity="center_horizontal"
                                android:text="18회 이상"
                                android:textAlignment="center"
                                android:textColor="?attr/textColor" />

                            <TextView
                                android:id="@+id/grade1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.2"
                                android:background="#FFFFFF"
                                android:textStyle="bold"
                                android:textColor="#FF0000"
                                android:text="" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="?attr/cardBackground"
                                android:gravity="center_horizontal"
                                android:text="2급"
                                android:textAlignment="center"
                                android:textColor="?attr/textColor" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="?attr/cardBackground"
                                android:gravity="center_horizontal"
                                android:text="16회 이상"
                                android:textAlignment="center"
                                android:textColor="?attr/textColor" />

                            <TextView
                                android:id="@+id/grade2"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.2"
                                android:background="#FFFFFF"
                                android:textStyle="bold"
                                android:textColor="#FF0000"
                                android:text="" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="?attr/cardBackground"
                                android:gravity="center_horizontal"
                                android:text="3급"
                                android:textAlignment="center"
                                android:textColor="?attr/textColor" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="?attr/cardBackground"
                                android:gravity="center_horizontal"
                                android:text="14회 이상"
                                android:textAlignment="center"
                                android:textColor="?attr/textColor" />

                            <TextView
                                android:id="@+id/grade3"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.2"
                                android:background="#FFFFFF"
                                android:textStyle="bold"
                                android:textColor="#FF0000"
                                android:text="" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="?attr/cardBackground"
                                android:gravity="center_horizontal"
                                android:text="4급"
                                android:textAlignment="center"
                                android:textColor="?attr/textColor" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="?attr/cardBackground"
                                android:gravity="center_horizontal"
                                android:text="12회 이상"
                                android:textAlignment="center"
                                android:textColor="?attr/textColor" />

                            <TextView
                                android:id="@+id/grade4"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.2"
                                android:background="#FFFFFF"
                                android:textStyle="bold"
                                android:textColor="#FF0000"
                                android:text="" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="?attr/cardBackground"
                                android:gravity="center_horizontal"
                                android:text="5급"
                                android:textAlignment="center"
                                android:textColor="?attr/textColor" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="?attr/cardBackground"
                                android:gravity="center_horizontal"
                                android:text="10회 이상"
                                android:textAlignment="center"
                                android:textColor="?attr/textColor" />

                            <TextView
                                android:id="@+id/grade5"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.2"
                                android:background="#FFFFFF"
                                android:textStyle="bold"
                                android:textColor="#FF0000"
                                android:text="" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="?attr/cardBackground"
                                android:gravity="center_horizontal"
                                android:text="6급"
                                android:textAlignment="center"
                                android:textColor="?attr/textColor" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="?attr/cardBackground"
                                android:gravity="center_horizontal"
                                android:text="8회 이상"
                                android:textAlignment="center"
                                android:textColor="?attr/textColor" />

                            <TextView
                                android:id="@+id/grade6"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.2"
                                android:background="#FFFFFF"
                                android:textStyle="bold"
                                android:textColor="#FF0000"
                                android:text="" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="?attr/cardBackground"
                                android:gravity="center_horizontal"
                                android:text="7급"
                                android:textAlignment="center"
                                android:textColor="?attr/textColor" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="?attr/cardBackground"
                                android:gravity="center_horizontal"
                                android:text="5회 이상"
                                android:textAlignment="center"
                                android:textColor="?attr/textColor" />

                            <TextView
                                android:id="@+id/grade7"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.2"
                                android:background="#FFFFFF"
                                android:textStyle="bold"
                                android:textColor="#FF0000"
                                android:text="" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="?attr/cardBackground"
                                android:gravity="center_horizontal"
                                android:text="8급"
                                android:textAlignment="center"
                                android:textColor="?attr/textColor" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="?attr/cardBackground"
                                android:gravity="center_horizontal"
                                android:text="3회 이상"
                                android:textAlignment="center"
                                android:textColor="?attr/textColor" />

                            <TextView
                                android:id="@+id/grade8"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.2"
                                android:background="#FFFFFF"
                                android:textStyle="bold"
                                android:textColor="#FF0000"
                                android:text="" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="?attr/cardBackground"
                                android:gravity="center_horizontal"
                                android:text="9급"
                                android:textAlignment="center"
                                android:textColor="?attr/textColor" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="?attr/cardBackground"
                                android:gravity="center_horizontal"
                                android:text="3회 미만"
                                android:textAlignment="center"
                                android:textColor="?attr/textColor" />

                            <TextView
                                android:id="@+id/grade9"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.2"
                                android:background="#FFFFFF"
                                android:textStyle="bold"
                                android:textColor="#FF0000"
                                android:text="" />

                        </TableRow>


                    </TableLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>