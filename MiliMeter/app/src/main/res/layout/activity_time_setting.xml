<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TimeSettingActivity">

    <RelativeLayout
        android:id="@+id/noticeRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/light_green" >


        <LinearLayout
            android:id="@+id/noticeHeadLineLL"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/green"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:drawableLeft="@drawable/ic_baseline_notifications_none_15_white"
                android:drawablePadding="15dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:text="알림설정"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                />

            <ImageButton
                android:id="@+id/cancelBt"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:scaleType="center"
                android:src="@drawable/ic_baseline_cancel_30_white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="91dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/timeSetSp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:text="임시" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="291dp"
            android:orientation="vertical">

            <Switch
                android:id="@+id/firstNtSt"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:text="00 : 00"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Switch
                android:id="@+id/secondNtSt"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:text="00 : 00"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="알림 제목"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"/>

            <EditText
                android:id="@+id/ntTitleEt"
                android:layout_width="380dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:hint="알림 제목을 적어주세요(예시: 운동)" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="알림 내용"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"/>

            <EditText
                android:id="@+id/ntCommentEt"
                android:layout_width="380dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:hint="알림 내용을 적어주세요(예시: 오늘 하루도 힘내세요~)" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true" >

            <Button
                android:id="@+id/backBt"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="취소하기"
                android:textSize="20sp"
                android:textColor="@color/dark_green"
                android:textStyle="bold"
                android:background="@color/white"/>

            <Button
                android:id="@+id/saveBt"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="저장하기"
                android:textSize="20sp"
                android:textColor="@color/dark_green"
                android:textStyle="bold"
                android:background="@color/white"/>

        </LinearLayout>



    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>