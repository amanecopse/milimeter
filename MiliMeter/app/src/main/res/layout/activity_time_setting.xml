<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TimeSettingActivity">

    <RelativeLayout
        android:id="@+id/noticeRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/light_green" >


        <LinearLayout
            android:id="@+id/noticeHeadLineLL"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/green"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:drawableLeft="@drawable/ic_baseline_notifications_none_15_white"
                android:drawablePadding="15dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:text="알림설정"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                />

            <ImageButton
                android:id="@+id/cancelBt"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:scaleType="center"
                android:src="@drawable/ic_baseline_cancel_30_white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="91dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TimePicker
                android:id="@+id/timeSetSp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:timePickerMode="spinner" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="292dp" >

            <TextView
                android:id="@+id/dayTv"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:textColor="@color/dark_green"
                android:textSize="20sp"
                android:gravity="center"/>

            <ImageButton
                android:id="@+id/calendarBt"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_baseline_calendar_today_24_white"
                android:background="@android:color/transparent"
                android:tintMode="src_in"
                app:tint="@color/dark_green"
                android:layout_marginLeft="100dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="340dp" >

            <Button
                android:id="@+id/sunBt"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="일"
                android:textColor="#FFFF0000"
                android:background="@color/white" />

            <Button
                android:id="@+id/monBt"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="월"
                android:background="@color/white" />

            <Button
                android:id="@+id/tueBt"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="화"
                android:background="@color/white" />

            <Button
                android:id="@+id/wedBt"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="수"
                android:background="@color/white" />

            <Button
                android:id="@+id/thrBt"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="목"
                android:background="@color/white" />

            <Button
                android:id="@+id/friBt"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="금"
                android:background="@color/white" />

            <Button
                android:id="@+id/satBt"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="토"
                android:textColor="#FF3700B3"
                android:background="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <Button
                android:id="@+id/backBt"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="취소하기"
                android:textSize="20sp"
                android:textColor="@color/dark_green"
                android:textStyle="bold"
                android:background="@color/white"/>

            <Button
                android:id="@+id/saveBt"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="저장하기"
                android:textSize="20sp"
                android:textColor="@color/dark_green"
                android:textStyle="bold"
                android:background="@color/white"/>

        </LinearLayout>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>