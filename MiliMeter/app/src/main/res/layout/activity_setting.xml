<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SettingActivity">

    <RelativeLayout
        android:id="@+id/settingRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/green"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/ic_baseline_miscellaneous_services_20_white"
            android:drawablePadding="15dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:text="환경설정 "
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/themeSettingBt"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="95dp"
            android:background="@color/white"
            android:text="테마"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_baseline_filter_15_white"
            android:drawableTint="@color/dark_green"
            android:textColor="@color/dark_green"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/languageSettingBt"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="186dp"
            android:background="@color/white"
            android:text="언어"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_baseline_translate_15_white"
            android:drawableTint="@color/dark_green"
            android:textColor="@color/dark_green"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/alarmSettingBt"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="277dp"
            android:background="@color/white"
            android:text="알림"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_baseline_notifications_none_15_white"
            android:drawableTint="@color/dark_green"
            android:textColor="@color/dark_green"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/privateSettingBt"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="368dp"
            android:background="@color/white"
            android:text="회원정보"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_baseline_admin_panel_settings_15_white"
            android:drawableTint="@color/dark_green"
            android:textColor="@color/dark_green"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/userSettingBt"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="459dp"
            android:background="@color/white"
            android:text="개인정보관리"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_baseline_pan_tool_13_white"
            android:drawableTint="@color/dark_green"
            android:textColor="@color/dark_green"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="95dp"
            android:layout_alignParentBottom="true"
            android:gravity="fill_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/homeBt"
                android:layout_width="81dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/ic_baseline_home_20_white"
                android:text="home"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:gravity="center_horizontal"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/bodyBt"
                android:layout_width="81dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/ic_baseline_accessibility_20_white"
                android:text="body"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:gravity="center_horizontal"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/resultBt"
                android:layout_width="81dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/ic_baseline_insert_chart_outlined_20_white"
                android:text="result"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:gravity="center_horizontal"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/goalBt"
                android:layout_width="81dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/ic_baseline_track_changes_20_white"
                android:text="goal"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:gravity="center_horizontal"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/settingBt"
                android:layout_width="81dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/ic_baseline_miscellaneous_services_20_white"
                android:text="setting"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:gravity="center_horizontal"
                android:textAllCaps="false" />

        </LinearLayout>

    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>