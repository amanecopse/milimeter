<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.PrivateAdministrationActivity">

    <RelativeLayout
        android:id="@+id/privateSettingLL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/privateSettingHeadLineLL"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/green"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:drawableLeft="@drawable/ic_baseline_pan_tool_13_white"
                android:drawablePadding="15dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:text="개인정보관리"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/cancelBt"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/ic_baseline_cancel_30_white"
                android:background="@android:color/transparent"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="640dp"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:background="@color/light_green">

            <TextView
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:text="비밀번호 변경"
                android:textColor="@color/dark_green"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:text="현재 비밀번호를 입력해주세요."
                android:textSize="20sp"
                android:layout_marginTop="5dp"/>

            <Button
                android:id="@+id/passwordCheckBt"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="#98FF9C"
                android:layout_marginTop="5dp"
                android:text="확 인"
                android:textColor="@color/dark_green"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"/>

            <EditText
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:text="새로운 비밀번호를 입력해주세요."
                android:textSize="20sp"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/passwordSaveBt"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="#98FF9C"
                android:layout_marginTop="5dp"
                android:text="저 장"
                android:textColor="@color/dark_green"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"/>

        </LinearLayout>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>