<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ThemeActivity">

    <RelativeLayout
        android:id="@+id/themeRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/themeHeadLineLL"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/green"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:drawableLeft="@drawable/ic_baseline_filter_15_white"
                android:drawablePadding="15dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:text="테마"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                />

            <ImageButton
                android:id="@+id/cancelBt"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/ic_baseline_cancel_20_white"
                android:background="@android:color/transparent"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="640dp"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:background="@color/green">

        <Button
            android:id="@+id/basicThemeBt"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:background="@color/light_green"
            android:text="기본 테마"
            android:gravity="left|center_vertical"
            android:paddingLeft="120dp"
            android:drawablePadding="9dp"
            android:drawableLeft="@drawable/ic_baseline_palette_20_white"
            android:drawableTint="@color/dark_green"
            android:textColor="@color/dark_green"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/specialThemeBt"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:background="@color/light_green"
            android:text="특별한 테마"
            android:gravity="left|center_vertical"
            android:paddingLeft="100dp"
            android:drawablePadding="9dp"
            android:drawableLeft="@drawable/ic_baseline_military_tech_20_white"
            android:drawableTint="@color/dark_green"
            android:textColor="@color/dark_green"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="2dp"/>

        <Button
            android:id="@+id/makingThemeBt"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:background="@color/light_green"
            android:text="테마 제작하기"
            android:gravity="left|center_vertical"
            android:paddingLeft="90dp"
            android:drawablePadding="9dp"
            android:drawableLeft="@drawable/ic_baseline_engineering_20_white"
            android:drawableTint="@color/dark_green"
            android:textColor="@color/dark_green"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="2dp"/>

        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>