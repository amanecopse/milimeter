<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.UserInformationActivity">

    <RelativeLayout
        android:id="@+id/userInformationRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/userInformationHeadLineLL"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/green"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:drawableLeft="@drawable/ic_baseline_pan_tool_13_white"
                android:drawablePadding="15dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:text="개인정보관리"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/cancelBt"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/ic_baseline_cancel_30_white"
                android:background="@android:color/transparent"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="640dp"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:background="@color/light_green">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="*이름:"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/middleText" />

                    <EditText
                        android:id="@+id/nameEt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="이름을 입력하세요"
                        android:inputType="textPersonName" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/birthDateLl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:srcCompat="@drawable/ic_baseline_calendar_today_24_black"
                        app:tint="?attr/textColorBanner" />

                    <TextView
                        android:id="@+id/birthDateTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:text="생년월일 입력"
                        android:textColor="?attr/textColor"
                        android:textSize="@dimen/middleText" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="*키:"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/middleText" />

                    <EditText
                        android:id="@+id/heightEt"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="number" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="cm"
                        android:textSize="@dimen/middleText" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="*몸무게:"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/middleText" />

                    <EditText
                        android:id="@+id/weightEt"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="number" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="kg"
                        android:textSize="@dimen/middleText" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="목표 몸무게:"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/middleText" />

                        <EditText
                            android:id="@+id/goalOfWeightEt"
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:inputType="number" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="kg"
                            android:textSize="@dimen/middleText" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="전체 종목 목표 등급:"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/middleText" />

                        <Spinner
                            android:id="@+id/goalOfTotalRankSp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:entries="@array/TrainingGrade" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="레그턱 목표 등급:"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/middleText" />

                        <Spinner
                            android:id="@+id/goalOfLegTuckRankSp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:entries="@array/TrainingGrade" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="왕복달리기 목표 등급:"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/middleText" />

                        <Spinner
                            android:id="@+id/goalOfShuttleRunRankSp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:entries="@array/TrainingGrade" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="전장순환훈련 목표 등급:"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/middleText" />

                        <Spinner
                            android:id="@+id/goalOfFieldTrainingRankSp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:entries="@array/TrainingGrade" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center">

                        <Button
                            android:id="@+id/getBt"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="불러 오기"
                            android:textSize="18sp"
                            android:textStyle="normal"
                            android:background="#A0FF7D" />

                        <Button
                            android:id="@+id/saveBt"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="저장 하기"
                            android:textSize="18sp"
                            android:textStyle="normal"
                            android:background="#A0FF7D"
                            android:layout_marginLeft="30dp"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>




        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>