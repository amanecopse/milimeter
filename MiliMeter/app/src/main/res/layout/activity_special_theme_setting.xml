<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SpecialThemeSettingActivity">

    <RelativeLayout
        android:id="@+id/themeRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/specialThemeHeadLineLL"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/green"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/ic_baseline_military_tech_20_white"
                android:drawablePadding="10dp"
                android:text="특별한 테마"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="650dp"
            android:layout_marginTop="90dp"
            android:background="@color/light_green">

            <RadioGroup
                android:id="@+id/languageRG"
                android:layout_width="match_parent"
                android:layout_height="640dp"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:background="@color/light_green">

                <RadioButton
                    android:id="@+id/basicIconRBt"
                    android:layout_width="250dp"
                    android:layout_height="80dp"
                    android:text="기본"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_green"
                    android:layout_marginTop="50dp"
                    android:drawableRight="@drawable/basic_icon_sample_black"
                    android:layout_gravity="center" />

                <RadioButton
                    android:id="@+id/koreaIconRBt"
                    android:layout_width="250dp"
                    android:layout_height="80dp"
                    android:text="한국어"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_green"
                    android:layout_marginTop="50dp"
                    android:drawableRight="@drawable/korea_icon_sample_black"
                    android:layout_gravity="center"/>

                <RadioButton
                    android:id="@+id/englishIconRBt"
                    android:layout_width="250dp"
                    android:layout_height="80dp"
                    android:text="영어"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_green"
                    android:layout_marginTop="50dp"
                    android:drawableRight="@drawable/english_icon_sample_black"
                    android:layout_gravity="center"
                    android:checked="true" />


            </RadioGroup>
        </LinearLayout>

        <Button
            android:id="@+id/saveBt"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="660dp"
            android:layout_marginLeft="165dp"
            android:text="설정하기"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/dark_green"
            android:background="#98FF9C"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>