<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SpecialThemeSettingActivity">

    <RelativeLayout
        android:id="@+id/themeRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/specialThemeHeadLineLL"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/green"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/ic_baseline_military_tech_20_white"
                android:drawablePadding="10dp"
                android:text="특별한 테마"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="650dp"
            android:layout_marginTop="90dp"
            android:background="@color/light_green">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:background="@color/green"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"/>

            <ImageView
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:background="@color/green"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"/>

            <ImageView
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:background="@color/green"
                android:layout_marginLeft="-375dp"
                android:layout_marginTop="250dp"/>

            <ImageView
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:background="@color/green"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="250dp"/>



        </LinearLayout>

        <Button
            android:id="@+id/saveBt"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="660dp"
            android:layout_marginLeft="165dp"
            android:text="설정하기"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/dark_green"
            android:background="#98FF9C"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>