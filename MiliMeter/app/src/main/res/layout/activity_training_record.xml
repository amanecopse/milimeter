<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TrainingRecordActivity">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="종목: "
                android:textSize="@dimen/middleText"
                tools:layout_editor_absoluteX="-44dp"
                tools:layout_editor_absoluteY="415dp" />

            <Spinner
                android:id="@+id/trainingCourseSp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/trainingCourse" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="?android:attr/listDivider"
                android:orientation="vertical">

            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="날짜: "
                android:textSize="@dimen/middleText"
                tools:layout_editor_absoluteX="-44dp"
                tools:layout_editor_absoluteY="415dp" />

            <TextView
                android:id="@+id/dateTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="클릭해서 입력"
                android:textColor="@android:color/black"
                android:textSize="@dimen/middleText"
                tools:layout_editor_absoluteX="-44dp"
                tools:layout_editor_absoluteY="415dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="?android:attr/listDivider"
                android:orientation="vertical">

            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="횟수: "
                android:textSize="@dimen/middleText"
                tools:layout_editor_absoluteX="-44dp"
                tools:layout_editor_absoluteY="415dp" />

            <EditText
                android:id="@+id/recordEt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/confirmBt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="확인" />
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>