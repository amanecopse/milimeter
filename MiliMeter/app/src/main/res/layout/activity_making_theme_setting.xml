<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MakingThemeSettingActivity">

    <RelativeLayout
        android:id="@+id/themeRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/specialThemeHeadLineLL"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/green"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/ic_baseline_engineering_20_white"
                android:drawablePadding="10dp"
                android:text="테마 제작하기"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/cancelBt"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/ic_baseline_cancel_30_white"
                android:background="@android:color/transparent"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="650dp"
            android:layout_marginTop="90dp"
            android:background="@color/light_green">

            <Button
                android:id="@+id/photoGetBt"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/ic_baseline_add_to_photos_30_white"
                android:drawableTint="@color/dark_green"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="100dp"
                android:text="사진 가져오기"
                android:textSize="20sp"
                android:textColor="@color/dark_green"
                android:textStyle="bold"
                android:drawablePadding="-50dp"/>


        </LinearLayout>

        <Button
            android:id="@+id/saveBt"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="660dp"
            android:layout_marginLeft="165dp"
            android:text="설정하기"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/dark_green"
            android:background="#98FF9C"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>