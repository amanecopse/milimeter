<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MakingThemeSettingActivity">

    <RelativeLayout
        android:id="@+id/themeRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/specialThemeHeadLineLL"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/green"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/ic_baseline_engineering_20_white"
                android:drawablePadding="10dp"
                android:text="테마 제작하기"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/cancelBt"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/ic_baseline_cancel_30_white"
                android:background="@android:color/transparent"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="650dp"
            android:layout_marginTop="90dp"
            android:background="@color/light_green"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:text="배경"
                android:textColor="@color/dark_green"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/homeBBt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/ic_baseline_add_to_photos_20_white"
                    android:drawableTint="#909190"
                    android:text="@string/home"
                    android:textColor="#909190"
                    android:textSize="15sp"
                    android:gravity="center_horizontal"
                    android:textAllCaps="false"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/bodyBBt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/ic_baseline_add_to_photos_20_white"
                    android:drawableTint="#909190"
                    android:text="@string/body"
                    android:textColor="#909190"
                    android:textSize="15sp"
                    android:gravity="center_horizontal"
                    android:textAllCaps="false"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/resultBBt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/ic_baseline_add_to_photos_20_white"
                    android:drawableTint="#909190"
                    android:text="@string/result"
                    android:textColor="#909190"
                    android:textSize="15sp"
                    android:gravity="center_horizontal"
                    android:textAllCaps="false"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/goalBBt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/ic_baseline_add_to_photos_20_white"
                    android:drawableTint="#909190"
                    android:text="@string/goal"
                    android:textColor="#909190"
                    android:textSize="15sp"
                    android:gravity="center_horizontal"
                    android:textAllCaps="false"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/settingBBt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/ic_baseline_add_to_photos_20_white"
                    android:drawableTint="#909190"
                    android:text="@string/setting"
                    android:textColor="#909190"
                    android:textSize="15sp"
                    android:gravity="center_horizontal"
                    android:textAllCaps="false"
                    android:layout_weight="1" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:text="아이콘"
                android:textColor="@color/dark_green"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/homeIBt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/ic_baseline_home_20_white"
                    android:drawableTint="#909190"
                    android:text="@string/home"
                    android:textColor="#909190"
                    android:textSize="15sp"
                    android:gravity="center_horizontal"
                    android:textAllCaps="false"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/bodyIBt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/ic_baseline_accessibility_20_white"
                    android:drawableTint="#909190"
                    android:text="@string/body"
                    android:textColor="#909190"
                    android:textSize="15sp"
                    android:gravity="center_horizontal"
                    android:textAllCaps="false"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/resultIBt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/ic_baseline_insert_chart_outlined_20_white"
                    android:drawableTint="#909190"
                    android:text="@string/result"
                    android:textColor="#909190"
                    android:textSize="15sp"
                    android:gravity="center_horizontal"
                    android:textAllCaps="false"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/goalIBt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/ic_baseline_track_changes_20_white"
                    android:drawableTint="#909190"
                    android:text="@string/goal"
                    android:textColor="#909190"
                    android:textSize="15sp"
                    android:gravity="center_horizontal"
                    android:textAllCaps="false"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/settingIBt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/ic_baseline_miscellaneous_services_20_white"
                    android:drawableTint="#909190"
                    android:text="@string/setting"
                    android:textColor="#909190"
                    android:textSize="15sp"
                    android:gravity="center_horizontal"
                    android:textAllCaps="false"
                    android:layout_weight="1" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:text="색상"
                android:textColor="@color/dark_green"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:weightSum="6"
                android:layout_marginBottom="100dp"
                android:layout_alignParentBottom="true">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:id="@+id/creamBt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FFF8DF" />

                    <Button
                        android:id="@+id/vanilaYellowBt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FFFAB7" />

                    <Button
                        android:id="@+id/lightYellowBt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FFFB00" />


                    <Button
                        android:id="@+id/mustardYellowBt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#F4E910" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:id="@+id/lightPinkOrangeBt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FF9E8D" />

                    <Button
                        android:id="@+id/orangeBt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FF855B" />

                    <Button
                        android:id="@+id/darkGoldenYellowBt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#DCA706" />

                    <Button
                        android:id="@+id/lightBrownBt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#D33C02" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:id="@+id/pinkBt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FB7AE6" />

                    <Button
                        android:id="@+id/redBt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FF0404" />

                    <Button
                        android:id="@+id/redWineBt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FF5C1F12" />

                    <Button
                        android:id="@+id/purpleBt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#CD93FF" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:id="@+id/lightGreenBt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#B7FD90" />

                    <Button
                        android:id="@+id/lightLimeBt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#7AFF90" />

                    <Button
                        android:id="@+id/mintBt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#3CFFBB" />

                    <Button
                        android:id="@+id/grayGreenBt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#257814" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:id="@+id/lightBlueGreenBt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#88FDE2" />

                    <Button
                        android:id="@+id/lightBlueBt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#6FC8FF" />

                    <Button
                        android:id="@+id/cobaltBt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FF6062B1" />

                    <Button
                        android:id="@+id/darkBlackBlueBt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FF101433" />


                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:id="@+id/beigeBt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FFDF93" />

                    <Button
                        android:id="@+id/beigeBrownBt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#AA907C" />

                    <Button
                        android:id="@+id/lightGrayBt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#D6D7D8" />

                    <Button
                        android:id="@+id/grayBt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FF656565" />
                </TableRow>
            </TableLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true" >

            <Button
                android:id="@+id/backBt"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="취소하기"
                android:textSize="20sp"
                android:textColor="@color/dark_green"
                android:textStyle="bold"
                android:background="@color/white"/>

            <Button
                android:id="@+id/saveBt"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="저장하기"
                android:textSize="20sp"
                android:textColor="@color/dark_green"
                android:textStyle="bold"
                android:background="@color/white"/>

        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>