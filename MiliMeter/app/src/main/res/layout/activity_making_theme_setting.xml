<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/appWindowBackground"
    tools:context=".activities.MakingThemeSettingActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/appBarCl"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="?attr/cardBackground"
        android:elevation="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iconIv"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/ic_baseline_engineering_20_white"
                app:tint="?attr/textColorBanner" />

            <TextView
                android:id="@+id/titleTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="테마 제작하기"
                android:textColor="?attr/textColorBanner"
                android:textSize="@dimen/largeText" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/backIb"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_arrow_back_24_cyan"
            app:tint="?attr/textColorBanner" />

        <ImageButton
            android:id="@+id/cancelIb"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_cancel_24_cyan"
            app:tint="?attr/textColorBanner" />

        <ImageView
            android:id="@+id/borderLineIv"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="?attr/textColorBanner"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        </ImageView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/appWindowBackground"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/bodyLl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                app:cardBackgroundColor="?attr/cardBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="배경"
                        android:textColor="?attr/textColor"
                        android:textSize="@dimen/middleText" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="*색상코드는 인터넷 검색을 통해 참고해주세요."
                        android:textSize="13sp"
                        android:textColor="?attr/textColor"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                       <TableLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">

                           <TableRow
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:orientation="horizontal">

                               <TextView
                                   android:layout_width="0dp"
                                   android:layout_height="wrap_content"
                                   android:layout_weight="0.5"
                                   android:text="바탕색1"
                                   android:textStyle="bold"
                                   android:textSize="15sp"
                                   android:textColor="?attr/textColor"
                                   android:gravity="center_horizontal"/>

                               <EditText
                                   android:id="@+id/background1Code"
                                   android:layout_width="0dp"
                                   android:layout_height="wrap_content"
                                   android:layout_weight="1"
                                   android:hint="색상코드를 입력해주세요"
                                   android:textColor="#000000"
                                   android:background="#ffffff"
                                   android:textColorHint="?attr/textColorSecondary"
                                   android:textSize="15sp"
                                   android:gravity="center_horizontal"/>

                           </TableRow>

                           <TableRow
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:orientation="horizontal">

                               <TextView
                                   android:layout_width="0dp"
                                   android:layout_height="wrap_content"
                                   android:layout_weight="0.5"
                                   android:text="바탕색2"
                                   android:textStyle="bold"
                                   android:textSize="15sp"
                                   android:textColor="?attr/textColor"
                                   android:gravity="center_horizontal"/>

                               <EditText
                                   android:id="@+id/background2Code"
                                   android:layout_width="0dp"
                                   android:layout_height="wrap_content"
                                   android:layout_weight="1"
                                   android:hint="색상코드를 입력해주세요"
                                   android:textColor="#000000"
                                   android:background="#ffffff"
                                   android:textColorHint="?attr/textColorSecondary"
                                   android:textSize="15sp"
                                   android:gravity="center_horizontal"/>

                           </TableRow>

                           <TableRow
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:orientation="horizontal">

                               <TextView
                                   android:layout_width="0dp"
                                   android:layout_height="wrap_content"
                                   android:layout_weight="0.5"
                                   android:text="글씨색1"
                                   android:textStyle="bold"
                                   android:textSize="15sp"
                                   android:textColor="?attr/textColor"
                                   android:gravity="center_horizontal"/>

                               <EditText
                                   android:id="@+id/text1Code"
                                   android:layout_width="0dp"
                                   android:layout_height="wrap_content"
                                   android:layout_weight="1"
                                   android:hint="색상코드를 입력해주세요"
                                   android:textColor="#000000"
                                   android:background="#ffffff"
                                   android:textColorHint="?attr/textColorSecondary"
                                   android:textSize="15sp"
                                   android:gravity="center_horizontal"/>

                           </TableRow>

                           <TableRow
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:orientation="horizontal">

                               <TextView
                                   android:layout_width="0dp"
                                   android:layout_height="wrap_content"
                                   android:layout_weight="0.5"
                                   android:text="글씨색2"
                                   android:textStyle="bold"
                                   android:textSize="15sp"
                                   android:textColor="?attr/textColor"
                                   android:gravity="center_horizontal"/>

                               <EditText
                                   android:id="@+id/text2Code"
                                   android:layout_width="0dp"
                                   android:layout_height="wrap_content"
                                   android:layout_weight="1"
                                   android:hint="색상코드를 입력해주세요"
                                   android:textColor="#000000"
                                   android:background="#ffffff"
                                   android:textColorHint="?attr/textColorSecondary"
                                   android:textSize="15sp"
                                   android:gravity="center_horizontal"/>

                           </TableRow>

                           <TableRow
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:orientation="horizontal">

                               <TextView
                                   android:layout_width="0dp"
                                   android:layout_height="wrap_content"
                                   android:layout_weight="0.5"
                                   android:text="제목/아이콘"
                                   android:textStyle="bold"
                                   android:textSize="15sp"
                                   android:textColor="?attr/textColor"
                                   android:gravity="center_horizontal"/>

                               <EditText
                                   android:id="@+id/bannerCode"
                                   android:layout_width="0dp"
                                   android:layout_height="wrap_content"
                                   android:layout_weight="1"
                                   android:hint="색상코드를 입력해주세요"
                                   android:textColor="#000000"
                                   android:background="#ffffff"
                                   android:textColorHint="?attr/textColorSecondary"
                                   android:textSize="15sp"
                                   android:gravity="center_horizontal"/>

                           </TableRow>

                       </TableLayout>



                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardBackgroundColor="?attr/cardBackground"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="아이콘"
                        android:textColor="?attr/textColor"
                        android:textSize="@dimen/middleText" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/homeIBt"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:drawableTop="@drawable/ic_baseline_home_20_white"
                            android:drawableTint="?attr/iconColor"
                            android:gravity="center_horizontal"
                            android:text="@string/home"
                            android:textAllCaps="false"
                            android:textColor="?attr/textColorSecondary"
                            android:textSize="15sp" />

                        <Button
                            android:id="@+id/bodyIBt"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:drawableTop="@drawable/ic_baseline_accessibility_20_white"
                            android:drawableTint="?attr/iconColor"
                            android:gravity="center_horizontal"
                            android:text="@string/body"
                            android:textAllCaps="false"
                            android:textColor="?attr/textColorSecondary"
                            android:textSize="15sp" />

                        <Button
                            android:id="@+id/resultIBt"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:drawableTop="@drawable/ic_baseline_insert_chart_outlined_20_white"
                            android:drawableTint="?attr/iconColor"
                            android:gravity="center_horizontal"
                            android:text="@string/result"
                            android:textAllCaps="false"
                            android:textColor="?attr/textColorSecondary"
                            android:textSize="15sp" />

                        <Button
                            android:id="@+id/goalIBt"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:drawableTop="@drawable/ic_baseline_track_changes_20_white"
                            android:drawableTint="?attr/iconColor"
                            android:gravity="center_horizontal"
                            android:text="@string/goal"
                            android:textAllCaps="false"
                            android:textColor="?attr/textColorSecondary"
                            android:textSize="15sp" />

                        <Button
                            android:id="@+id/settingIBt"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:drawableTop="@drawable/ic_baseline_miscellaneous_services_20_white"
                            android:drawableTint="?attr/iconColor"
                            android:gravity="center_horizontal"
                            android:text="@string/setting"
                            android:textAllCaps="false"
                            android:textColor="?attr/textColorSecondary"
                            android:textSize="15sp" />

                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>



    <LinearLayout
        android:id="@+id/bottomLl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/saveCv"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:clickable="true"
            android:focusableInTouchMode="false"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="?attr/cardBackground"
            app:cardCornerRadius="10dp"
            app:cardElevation="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:text="저장"
                    android:textColor="?attr/textColorBanner"
                    android:textSize="@dimen/middleText" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>