<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.LanguageActivity">

    <RelativeLayout
        android:id="@+id/languageRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/languageHeadLineLL"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/green"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:drawableLeft="@drawable/ic_baseline_translate_15_white"
                android:drawablePadding="15dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:text="언어"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                />

            <ImageButton
                android:id="@+id/cancelBt"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/ic_baseline_cancel_30_white"
                android:background="@android:color/transparent"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

       <RadioGroup
           android:id="@+id/languageRG"
           android:layout_width="match_parent"
           android:layout_height="300dp"
           android:layout_marginTop="100dp"
           android:checkedButton="@id/koreaRBt">

           <RadioButton
               android:id="@+id/koreaRBt"
               android:layout_width="300dp"
               android:layout_height="70dp"
               android:paddingLeft="15dp"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="20dp"
               android:gravity="left|center"
               android:text="@string/lang1"
               android:textSize="30sp" />

           <RadioButton
               android:id="@+id/englishRBt"
               android:layout_width="300dp"
               android:layout_height="70dp"
               android:paddingLeft="15dp"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="20dp"
               android:text="@string/lang2"
               android:textSize="30sp" />

       </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true" >

            <Button
                android:id="@+id/backBt"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="취소하기"
                android:textSize="20sp"
                android:textColor="@color/dark_green"
                android:textStyle="bold"
                android:background="@color/white"/>

            <Button
                android:id="@+id/saveBt"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="저장하기"
                android:textSize="20sp"
                android:textColor="@color/dark_green"
                android:textStyle="bold"
                android:background="@color/white"/>

        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>