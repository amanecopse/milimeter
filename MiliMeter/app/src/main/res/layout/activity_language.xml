<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.LanguageActivity">

    <RelativeLayout
        android:id="@+id/languageRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/languageHeadLineLL"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/green"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:drawableLeft="@drawable/ic_baseline_translate_15_white"
                android:drawablePadding="15dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:text="언어"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                />

            <ImageButton
                android:id="@+id/cancelBt"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/ic_baseline_cancel_30_white"
                android:background="@android:color/transparent"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <RadioGroup
            android:id="@+id/languageRG"
            android:layout_width="match_parent"
            android:layout_height="640dp"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:background="@color/light_green">

            <RadioButton
                android:id="@+id/basicIconRBt"
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:text="기본"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/dark_green"
                android:layout_marginTop="50dp"
                android:drawableRight="@drawable/basic_icon_sample_black"
                android:layout_gravity="center" />

            <RadioButton
                android:id="@+id/koreaIconRBt"
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:text="한국어"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/dark_green"
                android:layout_marginTop="50dp"
                android:drawableRight="@drawable/korea_icon_sample_black"
                android:layout_gravity="center"/>

            <RadioButton
                android:id="@+id/englishIconRBt"
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:text="영어"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/dark_green"
                android:layout_marginTop="50dp"
                android:drawableRight="@drawable/english_icon_sample_black"
                android:layout_gravity="center"
                android:checked="true" />


        </RadioGroup>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>