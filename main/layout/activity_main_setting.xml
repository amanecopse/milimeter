<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainActivity_setting"
    tools:viewBindingIgnore="true">

    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FF008A63"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/setting"
            android:drawablePadding="15dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:text="환경설정 "
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/themeButton"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="95dp"
            android:background="#FFFFFF"
            android:text="테마"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:drawablePadding="15dp"
            android:drawableLeft="@drawable/theme"
            android:textColor="#FF1F4C21"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/languageButton"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="186dp"
            android:background="#FFFFFF"
            android:text="언어"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:drawablePadding="9dp"
            android:drawableLeft="@drawable/language_trans"
            android:textColor="#FF1F4C21"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/alarmButton"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="277dp"
            android:background="#FFFFFF"
            android:text="알림"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:drawablePadding="9dp"
            android:drawableLeft="@drawable/alarm"
            android:textColor="#FF1F4C21"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/privateButton"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="368dp"
            android:background="#FFFFFF"
            android:text="개인정보관리"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:drawablePadding="15dp"
            android:drawableLeft="@drawable/private_administration"
            android:textColor="#FF1F4C21"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/userButton"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="459dp"
            android:background="#FFFFFF"
            android:text="회원정보"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:drawablePadding="9dp"
            android:drawableLeft="@drawable/user"
            android:textColor="#FF1F4C21"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="95dp"
            android:layout_alignParentBottom="true"
            android:gravity="fill_horizontal"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/home"
                android:layout_width="81dp"
                android:layout_height="fill_parent"
                android:background="@android:color/transparent"
                android:scaleType="center"
                android:src="@drawable/home" />

            <ImageButton
                android:id="@+id/body"
                android:layout_width="81dp"
                android:layout_height="fill_parent"
                android:background="@android:color/transparent"
                android:scaleType="center"
                android:src="@drawable/body" />

            <ImageButton
                android:id="@+id/result"
                android:layout_width="81dp"
                android:layout_height="fill_parent"
                android:background="@android:color/transparent"
                android:scaleType="center"
                android:src="@drawable/result_chart" />

            <ImageButton
                android:id="@+id/goal"
                android:layout_width="81dp"
                android:layout_height="fill_parent"
                android:background="@android:color/transparent"
                android:scaleType="center"
                android:src="@drawable/goal" />

            <ImageButton
                android:id="@+id/setting"
                android:layout_width="81dp"
                android:layout_height="fill_parent"
                android:background="@android:color/transparent"
                android:scaleType="center"
                android:src="@drawable/setting" />

        </LinearLayout>

    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
